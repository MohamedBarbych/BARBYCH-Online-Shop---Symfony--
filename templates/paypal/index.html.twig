{# templates/paypal/payment.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Paiement PayPal{% endblock %}

{% block body %}
    <h1 style="color: #009EFF;" >PayPal Payment  <i class="fa-brands fa-paypal" style="color: #009EFF;"></i></h1>

    {{ form_start(form) }}
    {{ form_row(form.fullName) }}
    {{ form_row(form.nationality) }}
    {{ form_row(form.address) }}
    {{ form_row(form.paypalCardNumber) }}
    {{ form_row(form.expirationDate) }}
    {{ form_row(form.cvc) }}
    {{ form_row(form.city) }}
    {{ form_row(form.codepostal) }}
    {{ form_row(form.submit) }}
    {{ form_end(form) }}

{% endblock %}
